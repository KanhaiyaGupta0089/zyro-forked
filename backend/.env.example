# Zyro Backend Environment Variables

# App Settings
APP_NAME=Zyro API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# API Settings
API_V1_PREFIX=/api/v1

# Database Settings
DB_NAME=zyro_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
# Alternative: Use DATABASE_URL directly
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Email Settings (for notifications and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# Celery Settings (for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Cloudinary Settings (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_SECURE=True

# Redis Settings (for caching and pub/sub)
REDIS_URL=redis://localhost:6379/0
# Alternative: Use individual settings
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_USERNAME=
# REDIS_PASSWORD=
# REDIS_USE_SSL=False

# Logging Settings
IS_LOCAL=True

# Error Notification Settings
ERROR_NOTIFICATION_EMAILS=admin@example.com,dev@example.com
ENABLE_ERROR_EMAILS=True

# GitHub Settings (for webhooks)
GITHUB_SECRET_KEY=your-github-webhook-secret
